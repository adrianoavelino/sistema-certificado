
<div class="x_panel">
  <div class="title_left">
    <h3>Lista de alunos</h3>
  </div>
  <div class="x_content row">
    <% if notice %>
      <div class="alert alert-success col-12"><%= notice %></div>
    <% end %>

    <div class="bar-button col-5 d-flex justify-content-end">
      <a href="/alunos/new" type="button" class="btn btn-primary" aria-label="Right Align">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar Aluno
      </a>
    </div>
    <div class="col-5"></div>
    <table class="table table-striped jambo_table bulk_action col-5">
      <thead>
        <tr class="headings">
          <th class="column-title">ID </th>
          <th class="column-title">Nome </th>
          <th class="column-title">RA </th>
          <th class="column-title no-link last"><span class="nobr">#</span></th>
          <th class="bulk-actions" colspan="7">
            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
          </th>
        </tr>
      </thead>

      <tbody>
      <% @alunos.each do |aluno| %>
        <tr class="even pointer">
          <td class=" "><%= aluno.id %></td>
          <td class=" "> <%= aluno.nome %> </td>
          <td class=" "> <%= aluno.ra %> </td>
          <td class=" last">
            <%= link_to  edit_aluno_path(aluno), class: 'edit_aluno' do %>
            <i class="fa fa-pencil"></i>
            <% end %>
            &nbsp;
            <!-- Button trigger modal -->
            <a rel="nofollow" data-toggle="modal" data-target="#modalUsuario<%= aluno.id %>">
              <i class="fa fa-trash"></i>
            </a>

            <!-- Modal -->
            <div class="modal fade" id="modalUsuario<%= aluno.id %>" tabindex="-1" role="dialog" aria-labelledby="modalUsuarioLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Excluir usu√°rio</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    Deseja excluir o aluno <%= aluno.nome %>?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <%= link_to  aluno_path(aluno), method: :delete, class: 'btn btn-danger' do %>
                      Excluir
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
