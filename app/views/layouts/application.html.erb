<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	  <link rel="icon" href="/assets/unesp.ico" type="image/ico" />
    <title>SistemaCertificado</title>

    <%= render 'shared/source_css' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="nav-md">

    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="#" class="site_title">
                <img src="/assets/unesplogowhite.png" alt="Logo da Unesp" class="logo" >
              </a>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <%= render 'shared/menu_profile' %>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
            <%= render 'shared/sidebar_menu' %>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <!-- /menu footer buttons -->
          </div>
        </div>

        <!-- top navigation -->
        <%= render 'shared/top_navigation' %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="row">
            <%= yield %>
          </div>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <%= render 'shared/footer' %>
        <!-- /footer content -->
      </div>
    </div>
    <%= render 'shared/source_js' %>
  </body>
</html>
