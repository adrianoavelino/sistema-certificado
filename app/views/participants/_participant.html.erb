  <tr class="even pointer">
    <td class=" "><%= participant.id %></td>
    <td class=" "> <%= participant.name %> </td>
    <td class=" "> <%= participant.rg %> </td>
    <td class=" last">
      <%= link_to  edit_participant_path(participant), class: 'edit_participant' do %>
      <i class="fa fa-pencil"></i>
      <% end %>
      &nbsp;
      <!-- Button trigger modal -->
      <a rel="nofollow" data-toggle="modal" data-target="#modalUsuario<%= participant.id %>">
        <i class="fa fa-trash"></i>
      </a>

      <!-- Modal -->
      <div class="modal fade" id="modalUsuario<%= participant.id %>" tabindex="-1" role="dialog" aria-labelledby="modalUsuarioLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Excluir usu√°rio</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Deseja excluir o participant <%= participant.name %>?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
              <%= link_to  participant_path(participant), method: :delete, class: 'btn btn-danger' do %>
                Excluir
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </td>
  </tr>
